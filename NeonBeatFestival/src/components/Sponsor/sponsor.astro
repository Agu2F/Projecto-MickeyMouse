---
import sponsors from './datos.js';
---
<div class="mt-16 sponsors-container flex justify-center relative overflow-hidden">
  <div class="sponsors-box p-12 rounded-2xl w-11/12 max-w-4xl border-4 border-[#c6c6c6] shadow-[0_0_30px_#ffff] relative">
        <h2 class="sponsors-title neon-text">Sponsors</h2>
        <div class="sponsors-grid">
            {sponsors.map((sponsor) => (
                <img src={sponsor.image} alt={sponsor.name} class="sponsor-logo" />
            ))}
        </div>
    </div>
</div>

<style>
    .sponsors-container {
        padding: 40px 0;
        display: flex;
        justify-content: center;
    }

    .sponsors-box {
      padding: 30px 40px; 
      max-width: 1200px;
      display: flex;
      flex-direction: column;
      align-items: center;
    }


    .sponsors-title {
        font-size: 2.2rem;
        font-weight: bold;
        color: #ffff;
        margin-bottom: 25px;
        text-transform: uppercase;
        letter-spacing: 2px;
        text-align: center;
    }

    .sponsors-grid {
      display: flex;
      flex-wrap: wrap;
      justify-content: center; /* Centra los elementos horizontalmente */
      align-items: center;
      gap: 100px;
      width: 100%;
      max-width: 1000px;
      margin: 0 auto;
    }


    .sponsor-logo {
        max-width: 140px;
        border-radius: 10%;
        height: auto;
        transition: transform 0.3s ease, opacity 0.3s ease;
    }

    .sponsor-logo:hover {
        transform: scale(1.2);
        opacity: 0.8;
    }

    @media (max-width: 390px) {
        .sponsors-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
        }

        .sponsor-logo {
            max-width: 100px;
        }
    }

    @media (max-width: 390px) {
        .sponsors-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 25px;
        }

        .sponsor-logo {
            max-width: 70px;
        }

        .sponsors-title {
            font-size: 1.5rem;
        }
    }

    @keyframes glow {
    0% {
        opacity: 0;
    }
    100% {
        opacity: 1;
    }
}
</style>